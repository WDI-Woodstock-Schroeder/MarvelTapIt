<div class="container">
  <div class="row">
    <div class="twelve columns">
      <h1>Welcome</h1>

      <%= form_tag('/log_in', method: :post) do %>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br>
      <%= submit_tag "Sign-In" %>

      <% end %>
    </div>
  </div>
</div>
