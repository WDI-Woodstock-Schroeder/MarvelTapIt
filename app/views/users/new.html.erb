<body id='welcomeBody'>

  <nav class='login'>
    <h1>Register</h1>
  </nav>

  <div class="container landing">
    <div class="row">
      <div class="twelve columns", class="submit_form">
        <%= form_for @user, class:  'new-user-form' do |f|%>
          <%= f.label :username %>
          <%= f.text_field :username %>
          <%= f.label :password %>
          <%= f.password_field :password %>
          <%= f.label :confirm_password %>
          <%= f.password_field :password_confirmation %>
          <br>
          <%= f.submit %>
        <% end %>
      </div>
    </section>
  </div>

  <script type="text/javascript">

    $('input[name="user[password]"]').on('keyup', function(){
      var field = $(this);
      if (field.val().length < 8){
        $(this).css({backgroundColor: 'pink'});
      } else {
        $(this).css({backgroundColor: 'lightgreen'});
      }
    });

    $('input[name="user[password_confirmation]"]').on('keyup', function(){
      var passwordConfirmationField = $(this);
      var passwordField = $('input[name="user[password]"]');
      if (passwordField.val() != passwordConfirmationField.val() ){
        $(this).css({backgroundColor: 'pink'});
      } else {
        $(this).css({backgroundColor: 'lightgreen'});
      }
    });

  </script>
</body>
